#!/bin/bash


# ANSI color escape codes
BRED="\033[1;31m"
DEFCOLOR="\033[0;39m"

printred() {
    echo -ne $BRED
    echo -n $@
    echo -e $DEFCOLOR
}


cargo fmt -- --check 
result=$?
if [[ ${result} -ne 0 ]] ; then
    printred ' There are some code style issues, run `cargo fmt` first.'
    exit 1
fi

npx prettier -c . 
result=$?
if [[ ${result} -ne 0 ]] ; then
    printred ' There are some code style issues, run `npx prettier -w .` first.'
    exit 1
fi



exit 0
