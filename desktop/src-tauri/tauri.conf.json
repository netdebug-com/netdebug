{
  "build": {
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "desktop",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.netdebug.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "NetDebug.com",
        "width": 1024,
        "height": 768
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.netdebug.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJGQ0VERjJBNDc4OTIyQzAKUldUQUlvbEhLdC9PdjVabGtNTmlZWVYwcy9qeGt2RGR6NGdJTFNYNU4zN1NhVnpDZGNEOHVsR1oK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}